version: '3.8'

services:
  fastapi:
    image: fastapi-pytorch-app
    build:
      context: .
      dockerfile: Dockerfile.fastapi
    ports:
      - "8000:8000"
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]

  flask:
    build: .
    ports:
      - "5000:5000"
    depends_on:
      - fastapi